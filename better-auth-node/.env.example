# Server Configuration
PORT=3000
NODE_ENV=production

# Database (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@postgres:5432/better_auth

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-here-min-32-characters
BETTER_AUTH_URL=https://auth.falklabs.de

# CORS - Comma separated list of allowed origins
TRUSTED_ORIGINS=https://control.brain.falklabs.de,https://axe.brain.falklabs.de,https://api.brain.falklabs.de

# OAuth Providers (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Configuration (Optional - for email verification)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@falklabs.de