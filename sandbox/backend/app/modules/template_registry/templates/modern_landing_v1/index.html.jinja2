<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ business_name }} - {{ tagline }}</title>
    <meta name="description" content="{{ description or tagline }}">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="container">
            <div class="logo">
                {% if logo_url %}
                <img src="{{ logo_url }}" alt="{{ business_name }} logo">
                {% else %}
                <h1>{{ business_name }}</h1>
                {% endif %}
            </div>
            <ul class="nav-links">
                {% for page in pages %}
                <li><a href="#{{ page }}">{{ page|capitalize }}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </header>

    <!-- Hero Section -->
    <section id="hero" class="hero">
        <div class="container">
            <h1 class="hero-title">{{ tagline }}</h1>
            <p class="hero-subtitle">{{ description or "Discover what we can do for you" }}</p>
            <div class="hero-cta">
                <a href="#contact" class="btn btn-primary">Get Started</a>
                <a href="#about" class="btn btn-secondary">Learn More</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    {% if features %}
    <section id="features" class="features">
        <div class="container">
            <h2>Our Features</h2>
            <div class="features-grid">
                {% for feature in features %}
                <div class="feature-card">
                    <h3>{{ feature }}</h3>
                    <p>Excellent {{ feature|lower }} capabilities.</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    <!-- About Section -->
    <section id="about" class="about">
        <div class="container">
            <h2>About {{ business_name }}</h2>
            <p>We are a leading provider in our industry, committed to excellence and customer satisfaction.</p>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
        <div class="container">
            <h2>Get in Touch</h2>
            <form class="contact-form" action="/submit" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 {{ business_name }}. All rights reserved.</p>
            <p>Website: <a href="https://{{ domain }}">{{ domain }}</a></p>
        </div>
    </footer>

    <script src="script.js"></script>
</body>
</html>
